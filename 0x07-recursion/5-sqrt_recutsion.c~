#include"holberton.h"

/**
 *_sqrt_recursion - gets the square root of an int using recursion
 *@n: number to get sqrt of
 *Return: sqrt of n
 */


int _sqrt_recursion(int n)
{
	int i = (n - 1) / 2;

	if (i <= 0)
		return (-1);
	if (i * i == n || (i - 1) * (i - 1) == n)
		return (i);
	if ((i - 1) * (i - 1) == n)
		return (i - 1);
	_sqrt_return(i);
}
